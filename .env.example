# ================================================================
# RuralRise OS - Environment Variables Template
# ================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!
# ================================================================

# ----------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------
# Base URL for backend API
VITE_API_URL=http://localhost:3001/api

# Webhook Endpoints (relative to API_URL)
VITE_LEARNING_PATH_WEBHOOK_URL=/learner/learning-path
VITE_ASSESSMENT_WEBHOOK_URL=/trainer/assessment
VITE_INTERVENTION_WEBHOOK_URL=/trainer/intervention
VITE_ANALYTICS_WEBHOOK_URL=/operations/analytics
VITE_OPTIMIZATION_WEBHOOK_URL=/operations/optimization

# ----------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------
VITE_APP_NAME=RuralRise OS
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0

# ----------------------------------------------------------------
# Authentication (Frontend)
# ----------------------------------------------------------------
# Token storage key
VITE_AUTH_TOKEN_KEY=ruralrise_auth_token
VITE_REFRESH_TOKEN_KEY=ruralrise_refresh_token

# Session timeout (minutes)
VITE_SESSION_TIMEOUT=30

# ----------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_COMMUNITY_FEATURES=false
VITE_ENABLE_ANALYTICS=true

# ----------------------------------------------------------------
# Third-Party Services (Future)
# ----------------------------------------------------------------
# Error Tracking
VITE_SENTRY_DSN=

# Analytics
VITE_POSTHOG_KEY=
VITE_GOOGLE_ANALYTICS_ID=

# AI Services
VITE_OPENAI_API_KEY=
VITE_ANTHROPIC_API_KEY=

# ----------------------------------------------------------------
# Development Settings
# ----------------------------------------------------------------
# Enable debug logging
VITE_DEBUG=false

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Enable mock data fallback
VITE_ENABLE_MOCK_DATA=true

